{
  "name": "torque-margin",
  "scripts": {
    "format": "npx prettier --write '{contracts,scripts}/**/*.{sol,ts}'",
    "fork": "NODE_OPTIONS=--openssl-legacy-provider npx hardhat node",
    "deploy:main": "npx hardhat deploy-main --network mainnet",
    "deploy:test": "npx hardhat deploy-test --network testnet",
    "deploy:fork": "npx hardhat deploy-fork --network localhost",
    "test": "npx hardhat test --network localhost",
    "test:deploy": "npm run deploy:fork && npm run test",
    "verify:main": "npx hardhat verify-all --network mainnet",
    "verify:test": "npx hardhat verify-all --network testnet",
    "update-files": "npx ts-node scripts/util/utilUpdateFiles.ts"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.{sol,ts}",
        "options": {
          "printWidth": 170,
          "tabWidth": 4,
          "useTabs": false,
          "singleQuote": false,
          "bracketSpacing": false,
          "explicitTypes": "always"
        }
      }
    ]
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.2.2",
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.4.0",
    "@openzeppelin/contracts-upgradeable": "^4.4.2",
    "@openzeppelin/hardhat-upgrades": "^1.13.0",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.2.22",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.11",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.7.0",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "ts-node": "^10.4.0",
    "typechain": "^7.0.0",
    "typescript": "^4.5.2"
  }
}
