{
    "name": "wabbit-protocol",
    "version": "1.0.0",
    "scripts": {
        "fork": "NODE_OPTIONS=--openssl-legacy-provider npx hardhat node",
        "deploy:protocol": "npx hardhat run --network localhost scripts/deploy-protocol.ts",
        "update": "cp config.json artifacts/contracts/Margin.sol/Margin.json artifacts/contracts/Oracle.sol/Oracle.json artifacts/contracts/LPool.sol/LPool.json ../Wabbit-Frontend/src/config",
        "deploy:dao": "npx hardhat run --network localhost scripts/deploy-dao.ts",
        "fund": "npx hardhat run --network localhost scripts/fund.ts",
        "all:protocol": "npm run deploy:protocol && npm run fund && npm run update",
        "all:dao": "npm run deploy:dao && npm run fund",
        "all": "npm run all:protocol && npm run deploy:dao",
        "time": "npx hardhat time --network localhost",
        "test": "npx hardhat test --network localhost"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.0.3",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@openzeppelin/contracts": "^4.4.0",
        "@types/chai": "^4.2.22",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.11.11",
        "chai": "^4.3.4",
        "ethereum-waffle": "^3.4.0",
        "ethers": "^5.5.2",
        "hardhat": "^2.7.0",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.2"
    },
    "dependencies": {
        "dotenv": "^10.0.0"
    }
}
