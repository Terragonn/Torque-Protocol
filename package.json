{
    "name": "wabbit-protocol-v1",
    "version": "1.0.0",
    "scripts": {
        "build": "npx hardhat compile",
        "fork": "NODE_OPTIONS=--openssl-legacy-provider npx hardhat node",
        "deploy": "npx hardhat run --network localhost scripts/deploy.ts",
        "fund": "npx hardhat run --network localhost scripts/fund.ts",
        "update": "cp config.json artifacts/contracts/IMargin.sol/IMargin.json artifacts/contracts/IOracle.sol/IOracle.json artifacts/contracts/IVPool.sol/IVPool.json ../Wabbit-Frontend/src/config",
        "all": "npm run deploy && npm run fund && npm run update",
        "time": "npx hardhat time --network localhost",
        "test": "npx hardhat test --network localhost"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.0.3",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@openzeppelin/contracts": "^4.4.0",
        "@types/chai": "^4.2.22",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.11.11",
        "chai": "^4.3.4",
        "ethereum-waffle": "^3.4.0",
        "ethers": "^5.5.2",
        "hardhat": "^2.7.0",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.2"
    },
    "dependencies": {
        "dotenv": "^10.0.0"
    }
}
